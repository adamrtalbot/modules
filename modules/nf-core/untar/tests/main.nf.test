nextflow_process {

    name "Test Process UNTAR"
    script "../main.nf"
    process "UNTAR"

    tag "modules"
    tag "modules_nfcore"
    tag "untar"

    test("test_untar") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = [ [], file(params.modules_test_data_base).resolve('/data/genomics/sarscov2/genome/db/kraken2.tar.gz') ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out.untar).match("test_untar") },
            )
        }

    }

    test("test_untar_onlyfiles") {

        when {
            params {
                outdir   = "$outputDir"
            }
            process {
                """
                input[0] = [ [], file(params.modules_test_data_base).resolve('/data/generic/tar/hello.tar.gz') ]
                """
            }
        }

        then {
            assertAll (
                { assert process.success },
                { assert snapshot(process.out.untar).match("test_untar_onlyfiles") },
            )
        }

    }

}
